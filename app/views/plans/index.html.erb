<h1>Purchase one of our elite fitness plans!</h1>

<ol>
<%@plans.each do |plan|%>
  <li><%=link_to "Join the #{plan.users.count} members currently enjoying our #{plan.name} tier membership! Click here for details.", plan%></li><br>
  <%image_name=plan.name.downcase%>
  <%image_name << ".png"%>
  <a href="<%=plan_path(plan)%>"><img src="<%=asset_path(image_name)%>" alt=""></a>
<%end%>
</ol>
